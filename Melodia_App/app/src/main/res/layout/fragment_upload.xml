<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/tv_ipaddr"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginRight="16dp"
            android:text="60.10.6.106" />

        <EditText
            android:id="@+id/tv_port"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="2017" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/socketconnect"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="@dimen/fab_margin"
            android:elevation="6dp"
            android:visibility="visible"
            app:backgroundTint="#4ECCC1"
            app:pressedTranslationZ="12dp"
            app:rippleColor="#53868B"
            app:srcCompat="@drawable/ic_fiber_manual_record_white_24dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/socketsend"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="@dimen/fab_margin"
            android:elevation="6dp"
            android:visibility="visible"
            app:backgroundTint="#4ECCC1"
            app:pressedTranslationZ="12dp"
            app:rippleColor="#53868B"
            app:srcCompat="@drawable/ic_fiber_manual_record_white_24dp" />


    </LinearLayout>

    <com.victor.loading.newton.NewtonCradleLoading
        android:id="@+id/loadingview"
        android:layout_width="wrap_content"
        android:layout_height="50dp" />

    <com.sackcentury.shinebuttonlib.ShineButton
        android:id="@+id/bt_turntoplay"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:src="@android:color/darker_gray"
        app:allow_random_color="true"
        app:big_shine_color="#ff6b6b"
        app:btn_color="@android:color/darker_gray"
        app:btn_fill_color="#ff6b6b"
        app:click_animation_duration="200"
        app:enable_flashing="false"
        app:shine_animation_duration="1500"
        app:shine_count="8"
        app:shine_distance_multiple="1.5"
        app:shine_turn_angle="10"
        app:small_shine_color="#CC9999"
        app:small_shine_offset_angle="20" />


    <SeekBar
        android:id="@+id/seekBarsex"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:max="2"
        android:progress="1" />

    <TextView
        android:id="@+id/tv_sex"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="中音" />

    <SeekBar
        android:id="@+id/seekBarspeed"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:max="2"
        android:progress="1" />

    <TextView
        android:id="@+id/tv_speed"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="中速" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:text="请先点击左边按钮连接到服务器\n再点击右边按钮发送录音开始转换"/>



</LinearLayout>